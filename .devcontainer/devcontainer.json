{
  "name": "raafco-ims-dev",
  "dockerComposeFile": ["../docker-compose.yml", "docker-compose.override.yml"],
  "service": "app",
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "workspaceFolder": "/var/www/html",
  "shutdownAction": "stopCompose",

  // Mount your source code only (excluding vendor/node_modules)
  "mounts": [
    "source=${localWorkspaceFolder}/src,target=/var/www/html,type=bind,consistency=cached",
    "source=vendor-cache,target=/var/www/html/vendor,type=volume",
    "source=node-cache,target=/var/www/html/node_modules,type=volume",
    "source=${localEnv:HOME}/.composer,target=/home/vscode/.composer,type=bind" // Composer cache mount
  ],

  "forwardPorts": [5173, 8081, 9003],
  "portsAttributes": {
    "8025": { "label": "mailpit", "onAutoForward": "ignore" },
    "5050": { "label": "pgadmin", "onAutoForward": "ignore" }
  },
  "postCreateCommand": "make setup",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": { "version": "22" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // PHP Development
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        //"junstyle.php-cs-fixer",
        "getpsalm.psalm-vscode-plugin",

        // Laravel Specific
        "onecentlin.laravel-blade",
        "onecentlin.laravel5-snippets",
        "amiralizadeh9480.laravel-extra-intellisense",
        "codingyu.laravel-goto-view",
        "ryannaddy.laravel-artisan",
        "mehedidracula.php-namespace-resolver",
        "neilbrayfield.php-docblocker",
        "stef-k.laravel-goto-controller",
        "austenc.laravel-blade-spacer",
        "emeraldwalk.RunOnSave",

        // Database & SQL
        "cweijan.vscode-database-client2",
        "mohammadaziz.vscode-pg-snippets",

        // Docker & Containers
        "ms-azuretools.vscode-docker",

        // Git
        "eamodio.gitlens",
        "mhutchie.git-graph",

        // Frontend (if using)
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ecmel.vscode-html-css",
        "stylelint.vscode-stylelint",
        "bradlc.vscode-tailwindcss",

        // Environment & Config
        "mikestead.dotenv",
        "redhat.vscode-yaml",

        // Utilities
        "editorconfig.editorconfig",
        "formulahendry.auto-rename-tag",
        "formulahendry.auto-close-tag",
        "streetsidesoftware.code-spell-checker",
        "sleistner.vscode-fileutils",
        "gruntfuggly.todo-tree",
        "ms-vscode.makefile-tools",
        "vscode-icons-team.vscode-icons",

        //Quality
        "SonarSource.sonarlint-vscode"
      ]
    }
  }
}
