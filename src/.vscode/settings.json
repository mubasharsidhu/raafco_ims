{
    // --- Java Runtime for Sonar Lint ---
    "sonarlint.analyzerProperties": {
        "sonar.php.enabled": "true",
        "sonar.javascript.enabled": "true",
        "sonar.typescript.enabled": "true"
    },

    // --- PHP & Laravel ---
    "php.validate.executablePath": "/usr/local/bin/php",
    "intelephense.environment.phpVersion": "8.3",
    "intelephense.files.maxSize": 5000000,
    "intelephense.stubs": ["PDO", "pgsql"],
    "editor.formatOnSave": true,

    "[php]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false
    },

    "phpstan.memoryLimit": "2G",
    "phpstan.showTypeOnHover": true,
    //"phpstan.options": ["--error-format=table", "-v"],

    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "(?<!\\.blade)\\.php$",
                "cmd": "php ./vendor/bin/pint ${file}"
            },
            {
                "match": "\\.blade\\.php$",
                "cmd": "npx blade-formatter -w ${file}"
            }
        ]
    },

    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // --- Tailwind & Frontend ---
    "editor.quickSuggestions": { "strings": true },
    "tailwindCSS.includeLanguages": {
        "blade": "html",
        "php": "html"
    },

    // --- Prettier & ESLint ---
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "stylelint.validate": ["css", "scss", "less", "postcss"],

    // --- Git ---
    "git.confirmSync": false,
    "git.autofetch": true,

    "files.exclude": {
        "**/vendor": true,
        "**/node_modules": true,
        "**/storage/framework/cache": true,
        "**/storage/logs": true,
        "**/bootstrap/cache": true
    },
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.autoSave": "onFocusChange",
    "editor.renderWhitespace": "boundary",
    "editor.minimap.enabled": true,
    "editor.wordWrap": "on",
    "cSpell.language": "en,en-US",
    "editor.fontLigatures": false,

    "workbench.colorCustomizations": {
      "statusBar.noFolderBackground": "#673AB7"
    }
}
